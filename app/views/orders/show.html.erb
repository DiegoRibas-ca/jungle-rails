<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Paid with this Email: <%= @order.email %> </h4>
  </div>


  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product </th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @order.line_items.each do |l|%>
            <%= render 'item_order', l_image: l.image.tiny, l_name: l.name, l_description: l.description, l_quantity: l.quantity  %>
          <% end %>  
        </tr>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="2">
            TOTAL QUANTITY:
          </th>
          <th>
            <%= @total_quantity %>
          </th>
        </tr>  
      <tr>
          <th colspan="2">
            TOTAL PRICE:
          </th>
          <th>
            <%=  number_to_currency(@order.total_cents/100) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
